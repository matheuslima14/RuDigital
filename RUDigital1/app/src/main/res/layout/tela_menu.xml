<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    app:layout_collapseMode="none">

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.27"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="#006400"
        android:textSize="40dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_votarCardapio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/votarCardapio"
        android:textColor="@android:color/background_light"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/btn_avisarComer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avisarComer"
        android:textColor="@android:color/background_light"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/btn_votarCardapio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_avaliarRefeicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avaliarRefeicao"
        android:textColor="@android:color/background_light"
        android:background="?attr/colorPrimaryDark"
        android:layout_below="@+id/btn_avisarComer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/btn_Sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_red_dark"
        android:text="@string/sair"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnConfiguracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textColor="@android:color/background_light"
        android:background="?attr/colorPrimaryDark"
        android:layout_below="@+id/btn_avaliarRefeicao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
